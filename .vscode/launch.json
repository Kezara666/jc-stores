// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Angular in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/src"
    },
    {
      "name": "Attach to Chrome (Angular)",
      "type": "chrome",
      "request": "attach",
      "port": 4200,
      "webRoot": "${workspaceFolder}/src"
    }
  ]
}
