
{
  "tasks": [
    {
      "label": "ng serve",
      "type": "shell",
      "command": "npm run start",
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Compiling...",
          "endsPattern": ".*Compiled successfully."
        }
      }
    }
  ]
}
